from LOGIC import anime

def imprimir_anime(anime):
    titulo = anime[1]
    genero = anime[2]
    ano = anime[3]
    cod_anime = anime[0]
    print ("Titulo: ",  titulo[1])
    print ("Genero: ", genero[2])
    print ("Ano: ", ano[3])        
    print ("Codigo da serie: ", cod_anime[0])        
    print() 

