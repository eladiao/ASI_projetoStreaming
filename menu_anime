def mostrar_menu():
    run_anime = True
    menu = ("\n----------------\n"+
             "(1) Listar animes \n" +
             "(2) Buscar anime por c처digo \n" +
             "(3) Remover anime \n" +
             "(0) Voltar\n"+
            "----------------")
    while(run_anime):
        print (menu)
        op = int(input("Digite sua escolha: "))

        if (op == 1):
            menu_listar()
        elif(op == 2):       
            menu_buscar()
        elif (op == 3):
            menu_remover()
        elif (op == 0):
            run_anime = False
