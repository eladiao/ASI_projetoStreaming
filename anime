anime = []

#Mangaka é quem escreveu o manga que posteriormente foi transformado em anime

def adicionar_anime(cod_anime,titulo,genero,ano,mangaka):    
    anime = [cod_anime,titulo,genero,ano,país,mangaka]
    anime.append(anime)
    
def listar_animes():
    return animes

def buscar_animes(cod_anime):
    for a in animes:
        if (a[0] == cod_anime):
            return a
    return None

def buscar_anime_por_genero(genero):
    for a in animes:
        if (a[0] == genero):
            return a
    return None

